int menu()
{
    int m, flag = 0;
    do
    {
        printf("\n==== Menu ====");
        printf("\n1 - Cadastro");
        printf("\n2 - Busca");
        printf("\n3 - Lista");
        printf("\n4 - Exclui");
        printf("\n5 - Sair");
        if(flag == 0)
        {
            printf("\nDigite a opcao: ");
            scanf("%d", &m);
            flag = 1;
        }
        else
        {
            printf("\nOpcao invalida! Digite novamente: ");
            scanf("%d", &m);
        }
    }while(m < 1 || m > 5);
    return m;
}
