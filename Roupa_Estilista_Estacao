{
	int i, j;
	char pesq_estilista[30];
	printf("\n BUSCA ROUPA POR ESTILISTA: \n");
	printf("\n Digite o nome do Estista: ");
	fgets(pesq_estilista, 30, stdin);

	 for(i=0; i<cad_stil; i++)
